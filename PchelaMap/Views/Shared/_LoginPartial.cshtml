@using Microsoft.AspNetCore.Identity
@using PchelaMap.Areas.Identity.Data;
@inject SignInManager<PchelaMapUser> SignInManager
@inject UserManager<PchelaMapUser> UserManager
    <ul class="nav navbar-nav ml-auto LoginProfileContainer">
        @if (SignInManager.IsSignedIn(User))
        {
            PchelaMapUser user = UserManager.GetUserAsync(User).Result;
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index"
                   title="Настройки">
                    <div class="UserProfileButtonContainer">
                        <span class="UserProfileButtonAvatar" style="background-image:url('@user.UserPhoto')"></span>
                        <span class="UserProfileButtonTextContainer">
                            <span class="UserProfileButtonUserName">@user.Name</span>
                            <span class="UserProfileButtonEditSpan">Редактировать профиль</span>
                            <input type="hidden" id="CurrentUserCoordX" value="@user.UserCoordinateX" />
                            <input type="hidden" id="CurrentUserCoordY" value="@user.UserCoordinateY" />
                        </span>
                    </div>
                </a>
            </li>
            <li class="nav-item">

                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link LogoutButton">Выйти</button>
                </form>

            </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link LoginButton" asp-area="Identity" asp-page="/Account/Login">
                        Войти
                    </a>
                </li>
             
                    <li class="nav-item">
                        <a class="nav-link RegisterButton" asp-area="Identity" asp-page="/Account/Register">
                            Зарегистрироваться
                        </a>
                    </li>
            }  
    </ul>
