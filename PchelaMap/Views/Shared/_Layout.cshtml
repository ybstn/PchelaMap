</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @using PchelaMap.Areas.Identity.Data
    @inject SignInManager<PchelaMapUser> SignInManager
    @inject UserManager<PchelaMapUser> UserManager
    @inject RoleManager<IdentityRole> _RoleManager
    <div class="mainContainer">
        <header>
            <partial name="_CookieConsentPartial" />
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light HeaderContainer">
                @*<div class="container">*@

                <a class="navbar-brand d-flex w-25 mr-auto LogoContainer" href="https://pchl.ru/">
                    <img class="Logo" src="/Images/logo60px.png" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse w-100 d-lg-inline-flex ">
                    <ul class="navbar-nav justify-content-center flex-grow-1 Menu">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">О проекте</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("ban"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MyTakenTasks">Мои задания</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Instructions">Инструкции</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">База данных</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Приватность</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>




                @*</div>*@
            </nav>
        </header>

        <main role="main">
            <!-- Yandex.Metrika counter -->
            <script type="text/javascript">(function (m, e, t, r, i, k, a) {
                    m[i] = m[i] || function () { (m[i].a = m[i].a || []).push(arguments) };
                    m[i].l = 1 * new Date(); k = e.createElement(t), a = e.getElementsByTagName(t)[0], k.async = 1, k.src = r, a.parentNode.insertBefore(k, a)
                })
                    (window, document, "script", "https://mc.yandex.ru/metrika/tag.js", "ym");

                ym(65579548, "init", {
                    clickmap: true,
                    trackLinks: true,
                    accurateTrackBounce: true
                });</script>
            <noscript><div><img src="https://mc.yandex.ru/watch/65579548" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
            <!-- /Yandex.Metrika counter -->
            @RenderBody()

        </main>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>

        @RenderSection("csss", required: false)
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
